<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">

	<Dialog id="createBulkLocationDialog" title="Bulk Location Creation" contentWidth="80%" class="sapUiResponsiveContentPadding">
		<content>
			<form:SimpleForm class="hierarchy-panel Mandatory-Fields" backgroundDesign="Transparent" editable="true" layout="ColumnLayout" columnsXL="3" columnsL="2" columnsM="2" width="100%">
				<form:toolbar>
					<Toolbar>
						<content>
							<core:Icon src="sap-icon://tree" />
							<Title text="Common Properties (Applied to all Locations)" />
						</content>
					</Toolbar>
				</form:toolbar>

				<Label text="Warehouse" required="true" />
				<Select id="warehouseSelectBulk" selectedKey="WH-001 - Main Warehouse">
					<core:Item key="WH-001 - Main Warehouse" text="WH-001 - Main Warehouse" />
				</Select>

				<Label text="Zone" required="true" />
				<Select id="ZoneTypeSelectBulk">
					<core:Item key="Receiving" text="Receiving" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>

				<Label text="Location Type"></Label>
				<Select id="LocationTypeSelectBulk">
					<core:Item key="Floor Space" text="Floor Space" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>

				<Label text="Storage Strategy"></Label>
				<Select id="StorageStrategySelectBulk">
					<core:Item key="FIFO" text="FIFO" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>
			</form:SimpleForm>
			<Panel class="hierarchy-panel Hierarchy-Components" backgroundDesign="Transparent">
				<Toolbar  design="Transparent" width="100%" >
					<OverflowToolbar design="Transparent">
						<core:Icon src="sap-icon://dimension" size="1.5rem" color="#1f77d0"/>
						<Title text="Component Ranges " />
					</OverflowToolbar>
				</Toolbar>


				<Text text="Select which components to use and specify their ranges. The system will generate all combinations." class="descriptionText sapUiSmallMarginBottom"/>

				<!-- Form Fields -->
				<VBox class="componentForm">

					<!-- Aisle -->
					<HBox alignItems="Center" class="rangeRow" wrap="Wrap">
						<CheckBox id="chkAisle" text="Aisle" selected="true"/>
						<Input id="inpAisleFrom" placeholder="A" width="4rem" change=".onGenerateCodes" class="sapUiTinyMarginBegin"/>
						<Text text="to" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
						<Input id="inpAisleTo" placeholder="J" change=".onGenerateCodes" width="4rem"/>
						<Text text="(10 aisles: A, B, C...)" class="noteText sapUiTinyMarginBegin"/>
					</HBox>

					<!-- Rack -->
					<HBox alignItems="Center" class="rangeRow" wrap="Wrap">
						<CheckBox id="chkRack" text="Rack" selected="true"/>
						<Input id="inpRackFrom" placeholder="1" width="4rem" change=".onGenerateCodes" class="sapUiTinyMarginBegin"/>
						<Text text="to" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
						<Input id="inpRackTo" placeholder="20" change=".onGenerateCodes" width="4rem"/>
						<Text text="(20 racks: 01, 02, ... 20)" class="noteText sapUiTinyMarginBegin"/>
					</HBox>

					<!-- Level -->
					<HBox alignItems="Center" class="rangeRow" wrap="Wrap">
						<CheckBox id="chkLevel" text="Level" selected="true"/>
						<Input id="inpLevelFrom" placeholder="1" width="4rem" change=".onGenerateCodes" class="sapUiTinyMarginBegin"/>
						<Text text="to" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
						<Input id="inpLevelTo" placeholder="4" width="4rem" change=".onGenerateCodes"/>
						<Text text="(4 levels: 01, 02, 03, 04)" class="noteText sapUiTinyMarginBegin"/>
					</HBox>

					<!-- Bin -->
					<HBox alignItems="Center" class="rangeRow" wrap="Wrap">
						<CheckBox id="chkBin" text="Bin    " selected="true"/>
						<Input id="inpBinFrom" placeholder="1" width="4rem" change=".onGenerateCodes" class="sapUiTinyMarginBegin"/>
						<Text text="to" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
						<Input id="inpBinTo" placeholder="2" width="4rem" change=".onGenerateCodes"/>
						<Text text="(2 bins: 01, 02)" class="noteText sapUiTinyMarginBegin"/>
					</HBox>
				</VBox>

				<!-- Add More -->
				<Link text="+ Add More Components (Bay, Shelf, Position, etc.)" class="sapUiSmallMarginTop addLink"/>

				<!-- Sample Generated Codes -->
				<VBox class="sampleBox sapUiSmallMarginTop">
					<Title text="Sample Generated Location Codes:" class="sapUiTinyMarginBottom"/>
					<HBox wrap="Wrap" class="codeContainer">
						<Text class="SampleGeneratedLocationCodes" text="{localModel>/displayCodes}" />
						<Text class="SampleGeneratedLocationCodes" text="A-01-02-01" />
						<Text class="SampleGeneratedLocationCodes" text="A-01-02-02" />
						<Text class="SampleGeneratedLocationCodes" text="J-20-04-02" />
					</HBox>
					<HBox alignItems="Center" class="sapUiTinyMarginTop">
						<core:Icon src="sap-icon://map" class="sapUiTinyMarginEnd" color="red"></core:Icon>
						<Title text="Final Destination:" class="noteText sapUiTinyMarginEnd"/>
						<ObjectStatus text="Last component (BIN in this example)" state="Success"/>
					</HBox>
				</VBox>
			</Panel>
			<Panel class="hierarchy-panel Barcode-Strategy" backgroundDesign="Transparent">
    <!-- Header -->
    <Toolbar design="Transparent">
        <Title text="Quick Presets (Optional)" class="sectionTitle"/>
    </Toolbar>

    <!-- Preset Options -->
    <HBox justifyContent="SpaceBetween" class="presetContainer sapUiSmallMarginBottom">
        <!-- Simple Warehouse -->
        <VBox class="presetCard simpleCard sapUiSmallMarginTop">
            <Title text="Simple Warehouse" class="presetTitle"/>
            <Text text="Rack + Position only" class="presetSubtitle"/>
            <Text text="100 locations (10 racks × 10 positions)" class="presetDesc"/>
        </VBox>

        <!-- Standard Rack System -->
        <VBox class="presetCard standardCard sapUiSmallMarginTop">
            <Title text="Standard Rack System" class="presetTitle"/>
            <Text text="Aisle + Rack + Level + Bin" class="presetSubtitle"/>
            <Text text="1,600 locations (10×20×4×2)" class="presetDesc"/>
        </VBox>

        <!-- Complex Multi-Level -->
        <VBox class="presetCard complexCard sapUiSmallMarginTop">
            <Title text="Complex Multi-Level" class="presetTitle"/>
            <Text text="All components" class="presetSubtitle"/>
            <Text text="Custom configuration" class="presetDesc"/>
        </VBox>
    </HBox>

    
</Panel>
<!-- Total Summary Box -->
    <VBox class="summaryBox hierarchy-panel">
        <Title text="Total Locations to Create:" class="summaryTitle"/>
        <Text text="10 aisles × 20 racks × 4 levels × 2 bins" class="summaryEquation"/>

        <HBox alignItems="Center" justifyContent="SpaceBetween" class="summaryDetails">
            <VBox>
                <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                    <core:Icon src="sap-icon://barcode" size="1rem" color="#1d4ed8"/>
                    <Text text="Barcode labels required: 1,600" class="summaryLine sapUiTinyMarginBegin"/>
                </HBox>

                <HBox alignItems="Center" class="sapUiTinyMarginBottom">
                    <core:Icon src="sap-icon://money-bills" size="1rem" color="#059669"/>
                    <Text text="Estimated cost: ~$400 (@ $0.25/label)" class="summaryLine sapUiTinyMarginBegin"/>
                </HBox>

                <HBox alignItems="Center">
                    <core:Icon src="sap-icon://flag" size="1rem" color="#f59e0b"/>
                    <Text text="Final destination: BIN (last component)" class="summaryLine sapUiTinyMarginBegin"/>
                </HBox>
            </VBox>
			<Text text="1,600" class="summaryNumber"/>
        </HBox>
    </VBox>
		</content>
		
		<beginButton>
			<Button text="Create Location" type="Emphasized" press="onCreateLocationPress" />
		</beginButton>

		<endButton>
			<Button text="Cancel" press=".onCancelPress('createBulkLocationDialog')" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>