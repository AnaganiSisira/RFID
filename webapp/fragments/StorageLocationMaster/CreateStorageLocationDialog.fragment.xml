<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">

	<Dialog
		id="createStorageLocationDialog"
		title="Create Storage Location"

		contentWidth="80%">
		<content>

			<form:SimpleForm
				editable="true"
				layout="ColumnLayout"
                columnsXL="3"
                columnsL="2"
                columnsM="1"
                >
                
				<Label text="Warehouse" required="true" />
				<Select id="warehouseSelect" selectedKey="WH-001 - Main Warehouse">
					<core:Item key="WH-001 - Main Warehouse" text="WH-001 - Main Warehouse" />
					</Select>

				<Label text="Location Code" required="true" />
				<Input
					id="locationCodeInput"
					placeholder="e.g., RACK-01, COLD-1"
					value="" />

				<Label text="Description" required="true" />
				<Input
					id="descriptionInput"
					placeholder="e.g., Main Receiving Rack"
					value="" />

				<Label text="Location Type" required="true" />
				<Select id="locationTypeSelect">
					<core:Item key="PalletRack" text="Pallet Rack" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>
			</form:SimpleForm>
           <form:SimpleForm editable="true" >

				<Label text="Volume Capacity" />
				<Input
					id="volumeCapacityInput"
					type="Number"
					placeholder="e.g., 2.5" />
                    <Label text="Temperature Zone" />
				<Select id="temperatureZoneSelect" selectedKey="Ambient">
					<core:Item key="Ambient" text="Ambient" />
					<core:Item key="Chilled" text="Chilled" />
					<core:Item key="Frozen" text="Frozen" />
				</Select>
                <Label text="Max Weight" />
				<HBox>
					<Input
						id="maxWeightInput"
						type="Number"
						placeholder="Optional" />
					<Select  selectedKey="KGs">
					<core:Item key="Grams" text="Grams" />
					<core:Item key="KGs" text="KGs" />
					<core:Item key="Tonons" text="Tonons" />
				</Select>
				</HBox>
           </form:SimpleForm>
    
		</content>
		<beginButton>
			<Button text="Create Location" type="Emphasized" press="onCreateLocationPress" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancelPress" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>