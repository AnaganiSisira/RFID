<core:FragmentDefinition xmlns:layout="sap.ui.layout" xmlns:calendar="sap.ui.unified.calendar"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">

	<Dialog
		id="createStorageLocationDialog"
		title="Create Storage Location"
		contentWidth="80%"
		class="sapUiResponsiveContentPadding"
		>
		<content>
			<Title text="Location Structure Type" ></Title>
			<HBox >
			
						</HBox>
			
			<form:SimpleForm
				editable="true"
				layout="ColumnLayout"
                columnsXL="3"
                columnsL="2"
                columnsM="1"
                >
                <core:Title text="Basic Information" />
				<Label text="Warehouse" required="true" />
				<Select id="warehouseSelect" selectedKey="WH-001 - Main Warehouse">
					<core:Item key="WH-001 - Main Warehouse" text="WH-001 - Main Warehouse" />
					</Select>
				<Label text="Zone" required="true" />
				<Select id="ZoneTypeSelect">
					<core:Item key="Receiving" text="Receiving" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>

				<Label text="Location Name" required="true" />
				<Input
					id="locationNameInput"
					placeholder="e.g., RACK-01, COLD-1"
					value="" />
<!-- 
				<Label text="Description" required="true" />
				<Input
					id="descriptionInput"
					placeholder="e.g., Main Receiving Rack"
					value="" />

				<Label text="Location Type" required="true" />
				<Select id="locationTypeSelect">
					<core:Item key="PalletRack" text="Pallet Rack" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select> -->
				
			</form:SimpleForm>
			<Panel >
			<headerToolbar>
			<OverflowToolbar >
			<core:Icon src="sap-icon://tree" ></core:Icon>
			<Title text="Hierarchy Components (Optional)"></Title>
			<ToolbarSpacer ></ToolbarSpacer>
			<Button text="Add Component"></Button>
			</OverflowToolbar>
			</headerToolbar>
			<form:SimpleForm >
			<Label text="Aisle" />
            <Input id="idAisle" width="100%" placeholder="A" liveChange=".onGenerateCode" />

            <Label text="Rack" />
            <Input id="idRack" width="100%" placeholder="01" liveChange=".onGenerateCode" />

            <Label text="Level" />
            <Input id="idLevel" width="100%" placeholder="02" liveChange=".onGenerateCode" />

            <Label text="Bin" />
            <Input id="idBin" width="100%" placeholder="03" liveChange=".onGenerateCode" />

            <Label text="Generated Location Code" />
            <Text id="idGenCode" text="(Enter component values above)" />
			</form:SimpleForm>
			</Panel>
           <form:SimpleForm editable="true" >
				
           </form:SimpleForm>
		   <form:SimpleForm >
		   <Label text="Rule Type"></Label>
		   <Select  selectedKey="Single SKU Rule">
					<core:Item key="Single SKU Rule" text="Single SKU Rule" />
					<core:Item key="Multi SKU Rule" text="Multi SKU Rule" />
					</Select>
			  <Label text="Status"></Label>
		   <Select  selectedKey="Active">
					<core:Item key="Active" text="Active" />
					<core:Item key="Inactive" text="Inactive" />
					</Select>
		   </form:SimpleForm>
    
		</content>
		<beginButton>
			<Button text="Create Location" type="Emphasized" press="onCreateLocationPress" />
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onCancelPress('createStorageLocationDialog')" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>