<core:FragmentDefinition xmlns:f="sap.f" xmlns:layout="sap.ui.layout"
	xmlns:calendar="sap.ui.unified.calendar"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form">

	<Dialog id="createStorageLocationDialog" title="Create Storage Location" contentWidth="80%" class="sapUiResponsiveContentPadding">

		<content>
			<Title text="Location Structure Type" />
			<HBox class="typeContainer sapUiMediumMarginBottom" justifyContent="Start" wrap="Wrap">

				<!-- Hierarchical Card -->
				<layout:VerticalLayout ></layout:VerticalLayout>
				<VBox id="idHierarchicalCard"  class="typeCard" tooltip="Hierarchical (Auto-generated)">
					<Title text="Hierarchical (Auto-generated)" level="H5" />
					<Text text="Build location code from components like Aisle, Rack, Level, Bin, etc." />
					<Text text="Example: A-01-02-03 or R01-12 or COLD-RM01-S3" class="exampleText" />
				</VBox>

				<!-- Simple Card -->
				<VBox id="idSimpleCard" class="typeCard" tooltip="Simple (Custom Code)">
					<Title text="Simple (Custom Code)" level="H5" />
					<Text text="Enter your own custom location code manually." />
					<Text text="Example: RECV-BAY-01 or FLOOR-AREA-5" class="exampleText" />
				</VBox>

			</HBox>


			<form:SimpleForm class="hierarchy-panel Mandatory-Fields" backgroundDesign="Transparent" editable="true" layout="ColumnLayout" columnsXL="3" columnsL="2" columnsM="2" width="100%">
				<form:toolbar>
					<Toolbar>
						<content>
							<core:Icon src="sap-icon://tree" />
							<Title text="Mandatory Fields (Required for all Locations)" />
						</content>
					</Toolbar>
				</form:toolbar>

				<Label text="Warehouse" required="true" />
				<Select id="warehouseSelect" selectedKey="WH-001 - Main Warehouse">
					<core:Item key="WH-001 - Main Warehouse" text="WH-001 - Main Warehouse" />
				</Select>

				<Label text="Zone" required="true" />
				<Select id="ZoneTypeSelect">
					<core:Item key="Receiving" text="Receiving" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>

				<Label text="Location Name" required="true" />
				<Input id="locationNameInput" placeholder="e.g., RACK-01, COLD-1" />
			</form:SimpleForm>

			<!-- Hierarchy Panel -->
			<Panel class="hierarchy-panel Hierarchy-Components" backgroundDesign="Transparent">
				<Toolbar design="Transparent" width="100%">
					<OverflowToolbar class="Hierarchy-Components" width="100%">
						<core:Icon src="sap-icon://tree" />
						<Title text="Hierarchy Components (Optional)" />
						<ToolbarSpacer />
						<MenuButton text="+ Add Component" type="Emphasized">
							<menu>
								<Menu>
									<MenuItem text="Aisle" press=".onAddComponent" />
									<MenuItem text="Rack" press=".onAddComponent" />
									<MenuItem text="Level" press=".onAddComponent" />
									<MenuItem text="Bin" press=".onAddComponent" />
								</Menu>
							</menu>
						</MenuButton>
					</OverflowToolbar>
				</Toolbar>

				<HBox justifyContent="Start" alignItems="Center" wrap="Wrap" class="sapUiSmallMarginTop sapUiSmallMarginBottom">

					<!-- Aisle -->
					<HBox alignItems="Center" class="component-box" visible="{localModel>/Aisle/visible}">
						<Label text="Aisle" showColon="true" labelFor="idAisle" class="sapUiSmallMarginEnd" />
						<Input id="idAisle" width="5rem" value="{localModel>/Aisle/value}" change=".onInputChange" />
						<Button icon="sap-icon://decline" type="Transparent" press=".onRemoveComponent('Aisle')" />
					</HBox>

					<!-- Rack -->
					<HBox alignItems="Center" class="component-box" visible="{localModel>/Rack/visible}">
						<Label text="Rack" showColon="true" labelFor="idRack" class="sapUiSmallMarginEnd" />
						<Input id="idRack" width="5rem" value="{localModel>/Rack/value}" change=".onInputChange" />
						<Button icon="sap-icon://decline" type="Transparent" press=".onRemoveComponent('Rack')" />
					</HBox>

					<!-- Level -->
					<HBox alignItems="Center" class="component-box" visible="{localModel>/Level/visible}">
						<Label text="Level" showColon="true" labelFor="idLevel" class="sapUiSmallMarginEnd" />
						<Input id="idLevel" width="5rem" value="{localModel>/Level/value}" change=".onInputChange" />
						<Button icon="sap-icon://decline" type="Transparent" press=".onRemoveComponent('Level')" />
					</HBox>

					<!-- Bin -->
					<HBox alignItems="Center" class="component-box" visible="{localModel>/Bin/visible}">
						<Label text="Bin" showColon="true" labelFor="idBin" class="sapUiSmallMarginEnd" />
						<Input id="idBin" width="5rem" value="{localModel>/Bin/value}" change=".onInputChange" />
						<Button icon="sap-icon://decline" type="Transparent" press=".onRemoveComponent('Bin')" />
					</HBox>

				</HBox>


				<VBox class="generated-box">
					<Label text="Generated Location Code:" />
					<Text id="idGeneratedCode" text="{localModel>/GeneratedCode}" class="sapUiSmallMarginTop generated-text" wrapping="true" />
				</VBox>

				<Label text="Common Structure Examples:" design="Bold" class="sapUiSmallMarginBottom" />

				<HBox justifyContent="SpaceBetween" wrap="Wrap">
					<VBox class="example-box">
						<Text text="Complex Rack:" />
						<Text text="Aisle + Rack + Level + Bin" />
						<Link text="A–01–02–03" href="#" />
					</VBox>

					<VBox class="example-box">
						<Text text="Simple Position:" />
						<Text text="Rack + Position" />
						<Link text="R01–12" href="#" />
					</VBox>

					<VBox class="example-box">
						<Text text="Room Based:" />
						<Text text="Room + Shelf" />
						<Link text="RM01–S3" href="#" />
					</VBox>
				</HBox>
			</Panel>
			<Panel class="hierarchy-panel Barcode-Strategy" backgroundDesign="Transparent">
				<Toolbar design="Transparent">
					<OverflowToolbar class="Barcode-Strategy">
						<core:Icon src="sap-icon://bar-code" size="1.5rem" color="#8e44ad"/>
						<Title text="Barcode Strategy: Composite Single Barcode" />
						<ObjectStatus text="Industry Standard" state="Success" class="statusTag"/>
					</OverflowToolbar>
				</Toolbar>

				<!-- Description -->
				<Text text="One unique barcode per location - worker scans location barcode during putaway for verification" class="sapUiSmallMarginTop sapUiTinyMarginBottom"/>

				<!-- Features Line -->
				<HBox class="sapUiTinyMarginTop" justifyContent="SpaceAround" wrap="Wrap">
					<HBox alignItems="Center">
						<core:Icon src="sap-icon://sys-enter" color="green" size="1rem"/>
						<Text text="Fast - only 2 scans (item + location)" class="sapUiTinyMarginBegin"/>
					</HBox>

					<HBox alignItems="Center">
						<core:Icon src="sap-icon://sys-enter" color="green" size="1rem"/>
						<Text text="Accurate verification" class="sapUiTinyMarginBegin"/>
					</HBox>

					<HBox alignItems="Center">
						<core:Icon src="sap-icon://sys-enter" color="green" size="1rem"/>
						<Text text="QR code option available" class="sapUiTinyMarginBegin"/>
					</HBox>
				</HBox>

				<!-- Divider Line -->
				<VBox class="dividerLine sapUiSmallMarginTop sapUiSmallMarginBottom"/>

				<!-- Putaway Process -->
				<VBox class="PutawayProcess ">
					<Text text="Putaway Process:" class="sapUiTinyMarginBottom" />
					<HBox alignItems="Center">
						<Text text="1. Scan Item" class="ScanItem" />
						<core:Icon src="sap-icon://slim-arrow-right" size="15px" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"></core:Icon>
						<Text text="2. Scan Location Barcode" class="ScanLocationBarcode" />
						<core:Icon src="sap-icon://slim-arrow-right" size="15px" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"></core:Icon>
						<Text text="✓ Verified" class="Verified" />
					</HBox>
				</VBox>
			</Panel>
			<form:SimpleForm class="hierarchy-panel" editable="true" layout="ColumnLayout" columnsXL="3" columnsL="2" columnsM="2">
				<form:toolbar>
					<Toolbar>
						<content>
							<core:Icon src="sap-icon://tree" />
							<Title text="Additional Properties (Optional)" />
						</content>
					</Toolbar>
				</form:toolbar>
				<Label text="Location Type"></Label>
				<Select id="LocationTypeSelect">
					<core:Item key="Floor Space" text="Floor Space" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>
				<Label text="Max Weight(kg)"></Label>
				<Input placeholder="1000"></Input>
				<Label text="Max Items"></Label>
				<Input placeholder="50"></Input>
				<Label text="Storage Strategy"></Label>
				<Select id="StorageStrategySelect">
					<core:Item key="FIFO" text="FIFO" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>
				<Label text="Temperature Control"></Label>
				<Select id="TemperatureControlSelect">
					<core:Item key="Ambient" text="Ambient" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>
				<Label text="Value Category"></Label>
				<Select id="ValueCategorySelect">
					<core:Item key="Any" text="Any" />
					<core:Item key="FloorStorage" text="Floor Storage" />
					<core:Item key="ColdStorage" text="Cold Storage" />
					<core:Item key="Shelving" text="Shelving" />
				</Select>
				<Label text="Allowed Product Categories"></Label>
				<Input placeholder="All Categories"></Input>
				<Label ></Label>
				<CheckBox text="Allow Mixed SKUs" wrapping="true"></CheckBox>
				<CheckBox text="Allow Mixed Batches" wrapping="true"></CheckBox>
				<CheckBox text="QC Check Required" wrapping="true"></CheckBox>
				<CheckBox text="High Security" wrapping="true"></CheckBox>
			</form:SimpleForm>

		</content>

		<beginButton>
			<Button text="Create Location" type="Emphasized" press="onCreateLocationPress" />
		</beginButton>

		<endButton>
			<Button text="Cancel" press=".onCancelPress('createStorageLocationDialog')" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>
