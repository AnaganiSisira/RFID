<core:FragmentDefinition xmlns:unified="sap.ui.unified"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml">

    <Dialog id="storageImportDialog" title="Import Storage Locations" class="sapUiSizeCompact" >

        <VBox class="sapUiSmallMargin importDialogBox" alignItems="Center" justifyContent="Center">

            <!-- Upload Icon -->
            <core:Icon src="sap-icon://upload-to-cloud" size="3rem" color="#0070f2" class="sapUiTinyMarginBottom" />
            <!-- Required Columns Box -->
            <VBox class="hierarchy-panel Mandatory-Fields sapUiSmallMarginBottom">
                <Title text="Required Columns:" level="H3" class="sapUiTinyMarginBottom" />

                <Text text="• Location Code (Required)" />
                <Text text="• Description (Optional)" />
                <Text text="• Zone/Area (Required)" />
                <Text text="• Location Type (Required)" />
                <Text text="• Temperature (Optional)" />
                <Text text="• Capacity (Optional)" />
            </VBox>
            <!-- Download Template Section - OPTIONAL -->
            <FlexBox class="excelActionFlex sapUiMediumMarginTop" justifyContent="Center" wrap="Wrap" alignItems="Stretch">

                <!-- Download Excel Template -->
                <VBox class="hierarchy-panel Hierarchy-Components sapUiSmallMarginTop sapUiMediumMarginEnd">
                    <VBox class="excelActionBox" backgroundDesign="Transparent" alignItems="Center">
                        <core:Icon src="sap-icon://excel-attachment" size="3rem" color="#107C41" class="sapUiTinyMarginBottom"/>
                        <Text text="Download Excel Template" class="excelActionTitle"/>
                        <Text text="Get the pre-formatted template with all required columns" class="excelActionSubtext sapUiTinyMarginBottom"/>
                        <Button text="Download Template" icon="sap-icon://download" type="Default" press="onDownloadTemplate" class="sapUiTinyMarginTop"/>
                    </VBox>
                </VBox>

                <!-- Upload Excel File -->
                <VBox class="hierarchy-panel Mandatory-Fields sapUiSmallMarginTop">
                    <VBox class="excelActionBox" alignItems="Center">
                        <core:Icon src="sap-icon://upload" size="3rem" color="#0070f2" class="sapUiTinyMarginBottom"/>
                        <Text text="Upload Completed Excel File" class="excelActionTitle"/>
                        <Text text="Supported formats: .xlsx, .xls, .csv (Max 5MB, up to 1000 Locations)" class="excelActionSubtext sapUiTinyMarginBottom"/>
                        <unified:FileUploader id="fileUploader" name="Choose File" width="13rem" buttonOnly="true" icon="sap-icon://upload" buttonText="Choose Excel File" fileType="xlsx,xls,csv" maximumFileSize="5" tooltip="Choose an Excel or CSV file" change=".onFileSelected" />
                    </VBox>
                </VBox>

            </FlexBox>

        </VBox>
        <beginButton>
        <Button text="Save Imports" type="Emphasized" press=".onSavePress('Import Locations','storageImportDialog')"></Button>
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelPress('storageImportDialog')" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
