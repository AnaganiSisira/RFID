<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">

    <Dialog id="createZoneDialog" title="Create Zone" contentWidth="900px">
        <content>
            <VBox class="sapUiSmallMargin">
                <!-- Zone Type Section -->
                <VBox class="zoneSection mandatory">

                <Label text="Zone Type" required="true" class="sapUiTinyMarginBottom"/>
                <l:HorizontalLayout allowWrapping="true" class="sapUiTinyMarginBottom">
                    <GenericTile class="sapUiTinyMargin" header="Receiving" subheader="Incoming goods" frameType="TwoByHalf" press="onZoneTypeSelect" pressEnabled="true" >
                        <TileContent footer="Receiving">
                            <ImageContent src="sap-icon://home-share" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile class="sapUiTinyMargin" header="Storage" subheader="Primary storage" frameType="TwoByHalf" press="onZoneTypeSelect">
                        <TileContent footer="Storage">
                            <ImageContent src="sap-icon://inventory" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile class="sapUiTinyMargin" header="Picking" subheader="Order fulfillment" frameType="TwoByHalf" press="onZoneTypeSelect">
                        <TileContent footer="Picking">
                            <ImageContent src="sap-icon://cart" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile class="sapUiTinyMargin" header="Shipping" subheader="Outbound staging" frameType="TwoByHalf" press="onZoneTypeSelect">
                        <TileContent footer="Shipping">
                            <ImageContent src="sap-icon://shipping-status" />
                        </TileContent>
                    </GenericTile>
                </l:HorizontalLayout>
                </VBox>

                <!-- Zone Code and Name -->
                 <VBox class="zoneSection mandatory">
                <l:Grid containerQuery="true" defaultSpan="L6 M6 S12" class="sapUiSmallMarginTop">
                    <VBox>
                        <Label text="Zone Code" required="true"/>
                        <Input placeholder="e.g., STOR-A, RCV-01" width="100%"/>
                        <Text text="Unique zone identifier" class="fieldDescription"/>
                    </VBox>
                    <VBox>
                        <Label text="Zone Name" required="true"/>
                        <Input placeholder="e.g., Storage Area A" width="100%"/>
                    </VBox>
                </l:Grid>
                </VBox>
                <!-- Zone Properties Section -->
                <VBox class="zoneSection optional sapUiSmallMarginTop">
                    <Text text="Zone Properties" class="sectionTitle"/>
                    <l:Grid containerQuery="true" defaultSpan="L4 M4 S12" class="sapUiSmallMarginTop">
                        <VBox>
                            <Label text="Area Size"/>
                            <HBox alignItems="Center">
                                <Input value="500" type="Number" width="100%"/>
                                <Select selectedKey="m2" class="unitSelect sapUiTinyMarginBegin">
                                    <core:Item key="m2" text="m²"/>
                                    <core:Item key="ft2" text="ft²"/>
                                </Select>
                            </HBox>
                        </VBox>
                        <VBox>
                            <Label text="Max Weight"/>
                            <HBox alignItems="Center">
                                <Input value="50000" type="Number" width="100%"/>
                                <Select selectedKey="kg" class="unitSelect sapUiTinyMarginBegin">
                                    <core:Item key="kg" text="kg"/>
                                    <core:Item key="lb" text="lb"/>
                                </Select>
                            </HBox>
                        </VBox>
                        <VBox>
                            <Label text="Max Volume"/>
                            <HBox alignItems="Center">
                                <Input value="1000" type="Number" width="100%"/>
                                <Select selectedKey="m3" class="unitSelect sapUiTinyMarginBegin">
                                    <core:Item key="m3" text="m³"/>
                                    <core:Item key="ft3" text="ft³"/>
                                </Select>
                            </HBox>
                        </VBox>
                    </l:Grid>
                    <l:Grid containerQuery="true" defaultSpan="L4 M4 S12" class="sapUiTinyMarginTop">
                        <VBox>
                            <Label text="Max Pallets"/>
                            <Input value="500" type="Number" width="100%"/>
                        </VBox>
                        <VBox>
                            <Label text="Height"/>
                            <HBox alignItems="Center">
                                <Input value="8" type="Number" width="100%"/>
                                <Select selectedKey="m" class="unitSelect sapUiTinyMarginBegin">
                                    <core:Item key="m" text="m"/>
                                    <core:Item key="ft" text="ft"/>
                                </Select>
                            </HBox>
                        </VBox>
                        <VBox>
                            <Label text="Floor Level"/>
                            <Input value="1" type="Number" width="100%"/>
                        </VBox>
                    </l:Grid>
                </VBox>

                <!-- Temperature Control Section -->
                <VBox class="zoneSection optional sapUiSmallMarginTop">
                    <HBox justifyContent="SpaceBetween" alignItems="Center">
                        <Text text="Temperature Control" class="sectionTitle"/>
                        <CheckBox text="Enable"/>
                    </HBox>
                    <l:Grid containerQuery="true" defaultSpan="L6 M6 S12" class="sapUiSmallMarginTop">
                        <VBox>
                            <Label text="Min Temperature"/>
                            <HBox alignItems="Center">
                                <Input value="2" type="Number" width="100%"/>
                                <Select selectedKey="C" class="unitSelect sapUiTinyMarginBegin">
                                    <core:Item key="C" text="°C"/>
                                    <core:Item key="F" text="°F"/>
                                </Select>
                            </HBox>
                        </VBox>
                        <VBox>
                            <Label text="Max Temperature"/>
                            <Input value="8" type="Number" width="100%"/>
                        </VBox>
                    </l:Grid>
                </VBox>

                <!-- Storage Rules Section -->
                <VBox class="zoneSection optional sapUiSmallMarginTop">
                    <Text text="Storage Rules" class="sectionTitle"/>
                    <l:Grid containerQuery="true" defaultSpan="L4 M4 S12" class="sapUiSmallMarginTop">
                        <CheckBox text="Allow Mixed SKUs"/>
                        <CheckBox text="Allow Mixed Batches"/>
                        <CheckBox text="FIFO Enforced" selected="true"/>
                    </l:Grid>
                </VBox>

                <!-- Zone Flags Section -->
                <VBox class="zoneSection optional sapUiSmallMarginTop">
                    <Text text="Zone Flags" class="sectionTitle"/>
                    <l:Grid containerQuery="true" defaultSpan="L4 M4 S12" class="sapUiSmallMarginTop">
                        <CheckBox text="Picking Zone"/>
                        <CheckBox text="Reserve Zone"/>
                        <CheckBox text="Staging Zone"/>
                    </l:Grid>
                </VBox>

                <!-- Security & Access Section -->
                <VBox class="zoneSection optional sapUiSmallMarginTop">
                    <Text text="Security &amp; Access" class="sectionTitle"/>
                    <l:Grid containerQuery="true" defaultSpan="L6 M6 S12" class="sapUiSmallMarginTop">
                        <VBox>
                            <Label text="Security Level"/>
                            <Select selectedKey="STANDARD" width="100%">
                                <core:Item key="STANDARD" text="STANDARD"/>
                                <core:Item key="HIGH" text="HIGH"/>
                                <core:Item key="SECURE" text="SECURE"/>
                            </Select>
                        </VBox>
                        <VBox class="sapUiTinyMarginTop">
                            <Label text="" />
                            <CheckBox text="Camera Monitored"/>
                        </VBox>
                    </l:Grid>
                </VBox>
            </VBox>
        </content>

        <beginButton>
            <Button text="Cancel" press="onCancelPress('createZoneDialog')"/>
        </beginButton>

        <endButton>
            <Button text="Create Zone" type="Emphasized" press="onCreateZonePress"/>
        </endButton>

    </Dialog>
</core:FragmentDefinition>