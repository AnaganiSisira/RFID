<mvc:View xmlns:cards="sap.f.cards" controllerName="rfidwarehousesuiteui.controller.StorageLocationMasters"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f" displayBlock="true">

    <Page class="sapUiResponsiveContentPadding">
        <headerContent>
            <Title text="Storage Location"></Title>
            <Text class="sapUiSmallMarginTop" text="Fixed warehouse locations with barcode identification"/>
            <ToolbarSpacer ></ToolbarSpacer>
            <!-- <Button text="Barecode-based System" type="Accept"></Button>
            <Button text="Export"></Button>
            <Button text="Template"></Button> -->
        </headerContent>

        <content>
            <HBox class="sapUiSmallMarginBottom" justifyContent="Inherit" wrap="Wrap">
                <VBox class="sapUiSmallMargin card" alignItems="Center">
                    <Title text="Total Locations" wrapping="true" />
                    <Text text="2,456" class="sapUiTinyMarginTop sapUiTinyMarginBottom" />
                    <Text text="All with barcodes" />
                </VBox>

                <VBox class="sapUiSmallMargin card" alignItems="Center">
                    <Title text="Active Locations" wrapping="true"/>
                    <ObjectNumber number="2,234" state="Success" class="sapUiTinyMarginTop sapUiTinyMarginBottom"/>
                    <ObjectStatus text="91% available" state="Success"></ObjectStatus>
                </VBox>

                <VBox class="sapUiSmallMargin card" alignItems="Center">
                    <Title text="Avg. Utilization" wrapping="true"/>
                    <ObjectNumber number="68%" state="Warning" class="sapUiTinyMarginTop sapUiTinyMarginBottom"/>
                    <ObjectStatus text="Volume occupied" state="Warning"></ObjectStatus>
                </VBox>

                <VBox class="sapUiSmallMargin card" alignItems="Center">
                    <Title text="Temperature Zones" wrapping="true"/>
                    <Text text="Ambient: 70% | Cold: 30%"/>
                </VBox>
            </HBox>
            <!-- Cost Optimization Banner -->
            <MessageStrip text="Smart Cost Optimization — Using barcodes for fixed locations saves ₹1,22,800 vs RFID. ₹50/location saved." type="Success" showIcon="true" class="sapUiSmallMarginBottom" />
            
            <Table >
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <SearchField width="25%" placeholder="Search by code, name, type" liveChange="onSearch" />
                            <Button icon="sap-icon://filter" text="Filters" />

                            <ToolbarSpacer />

                            <Button icon="sap-icon://download" text="Export" />
                            <Button icon="sap-icon://upload" text="Import" />
                            <Button icon="sap-icon://batch-payments" text="Bulk Create" press=".onBulkLocationOperations" />
                            <Button icon="sap-icon://add" text="Create Location" type="Emphasized" press=".onCreateStorageLocation" />
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Location Code" />
                    </Column>
                    <Column>
                        <Text text="Location Name" />
                    </Column>
                    <Column>
                        <Text text="Zone/Type" />
                    </Column>
                    <Column>
                        <Text text="Structure" />
                    </Column>
                    <Column>
                        <Text text="Capacity/Usage" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Actions" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="RACK-01" text="WH-001" />
                            <ObjectIdentifier title="RACK-01" text="WH-001" />
                            <ObjectIdentifier title="RACK-01" text="WH-001" />
                            <ObjectIdentifier title="RACK-01" text="WH-001" />
                            <ProgressIndicator percentValue="60" displayValue="79%" />

                            <ObjectStatus text="Active" state="{= ${status} === 'Active' ? 'Success' : 'Error'}" />
                            <HBox>
                                <Button icon="sap-icon://show" />
                                <Button icon="sap-icon://edit" />
                                <Button icon="sap-icon://delete" />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
