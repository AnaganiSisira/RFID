<mvc:View xmlns:cards="sap.f.cards" controllerName="rfidwarehousesuiteui.controller.StorageLocationMasters"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f" displayBlock="true">

    <Page title="Storage Location" class="sapUiResponsiveContentPadding">
        <!-- <headerContent>
            <Button text="Barecode-based System" type="Accept"></Button>
            <Button text="Export"></Button>
            <Button text="Template"></Button>
        </headerContent> -->
        <subHeader>
            <OverflowToolbar >
                <Text text="Fixed warehouse locations with barcode identification"/>
            </OverflowToolbar>
        </subHeader>
        <content>
            <!-- KPIs Section -->
            <HBox justifyContent="SpaceBetween" class="sapUiSmallMarginTop sapUiSmallMarginBottom" wrap="Wrap">
                <GenericTile header="Total Locations">
                    <TileContent footer="All with barcodes">
                        <NumericContent value="1234"></NumericContent>
                    </TileContent>
                </GenericTile>
                <GenericTile header="Active Locations">
                    <TileContent footer="90% available">
                        <NumericContent value="234"></NumericContent>
                    </TileContent>
                </GenericTile>
                <!-- <GenericTile header="Labels Printed">
                    <TileContent footer="100% labeled">
                        <NumericContent value="456"></NumericContent>
                    </TileContent>
                </GenericTile> -->
                <GenericTile header="Avg. Utilization">
                    <TileContent footer="Volume Occupied">
                        <NumericContent value="68%"></NumericContent>
                    </TileContent>
                </GenericTile>
                <GenericTile header="Temperature Zones">
                    <TileContent >
                        <NumericContent value="Ambient: 70% | Cold: 30%"></NumericContent>
                    </TileContent>
                </GenericTile>
            </HBox>

            <!-- Cost Optimization Banner -->
            <MessageStrip text="Smart Cost Optimization — Using barcodes for fixed locations saves ₹1,22,800 vs RFID. ₹50/location saved." type="Success" showIcon="true" class="sapUiSmallMarginBottom" />

            <!-- Table Section -->
            <Table id="idLocationTable" inset="false" backgroundDesign="Solid">
                <headerToolbar >
                    <OverflowToolbar>
                        <Title text="Storage Locations (2,456 total)" level="H3" />
                        <ToolbarSpacer ></ToolbarSpacer>
                        <Button text="Print Labels" icon="sap-icon://print" press=".onPrintLabels" />
                        <Button text="Create Location" type="Emphasized" icon="sap-icon://add" press=".onCreateStorageLocation" class="sapUiTinyMarginBegin" />
                        <Button text="Bulk Operations" icon="sap-icon://upload" press=".onBulkOperations" class="sapUiTinyMarginBegin" />
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column>
                        <Text text="Location Code" />
                    </Column>
                    <Column>
                        <Text text="Description" />
                    </Column>
                    <Column>
                        <Text text="Type" />
                    </Column>
                    <Column>
                        <Text text="Temperature" />
                    </Column>
                    <Column>
                        <Text text="Barcode Label" />
                    </Column>
                    <Column>
                        <Text text="Volume Capacity" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="RACK-01" text="WH-001" />
                            <Text text="Receiving Area - Main Rack 1" />
                            <Text text="Pallet Rack" />
                            <Text text="Ambient" />
                            <Text text="LOC-WH001-RACK01-2025" />
                            <Text text="2.5 m³" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
